{
  "name": "5g-health-platform-realtime-gateway",
  "version": "1.0.0",
  "description": "Real-time WebSocket gateway for 5G Health Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:auto": "powershell -ExecutionPolicy Bypass -File scripts/dev.ps1",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "smoke": "node scripts/smoke-test.js",
    "verify": "npm run typecheck && npm run build && npm test"
  },
  "keywords": [
    "websocket",
    "nats",
    "jetstream",
    "real-time",
    "5g",
    "health"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/websocket": "8.3.1",
    "ajv": "^8.12.0",
    "ajv-draft-04": "^1.0.0",
    "ajv-formats": "^2.1.1",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
    "nats": "2.15.0",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}